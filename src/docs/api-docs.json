{
    "openapi": "3.0.0",
    "info": {
        "title": "MN Konveksi API",
        "version": "1.0.0",
        "description": "Dokumentasi API MN Konveksi"
    },
    "servers": [
        {
            "url": "https://be-mn-konveksi.vercel.app"
        },
        {
            "url": "http://localhost:5000"
        }
    ],
    "tags": [
        {
            "name": "Auth",
            "description": "Autentikasi dan otorisasi user"
        },
        {
            "name": "Produk",
            "description": "Manajemen data produk konveksi"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "nama": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "Produk": {
                "type": "object",
                "properties": {
                    "id_produk": {
                        "type": "integer"
                    },
                    "nama_produk": {
                        "type": "string"
                    },
                    "deskripsi": {
                        "type": "string"
                    },
                    "harga": {
                        "type": "integer"
                    },
                    "estimasi_pengerjaan": {
                        "type": "integer"
                    },
                    "bahan": {
                        "type": "string"
                    },
                    "foto": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    },
    "paths": {
        "/api/auth/register": {
            "post": {
                "summary": "Register user baru",
                "tags": [
                    "Auth"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "nama",
                                    "email",
                                    "password",
                                    "no_hp"
                                ],
                                "properties": {
                                    "nama": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "no_hp": {
                                        "type": "string"
                                    },
                                    "alamat": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Registrasi berhasil"
                    },
                    "400": {
                        "description": "Registrasi gagal"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "summary": "Login user",
                "tags": [
                    "Auth"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login berhasil"
                    },
                    "401": {
                        "description": "Email atau password salah"
                    }
                }
            }
        },
        "/api/auth/me": {
            "get": {
                "summary": "Ambil data user login",
                "tags": [
                    "Auth"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Data user login"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/api/produk": {
            "get": {
                "summary": "Ambil semua produk",
                "tags": [
                    "Produk"
                ],
                "responses": {
                    "200": {
                        "description": "Data produk berhasil diambil"
                    }
                }
            }
        }
    }
}